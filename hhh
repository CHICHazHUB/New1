-- HUGE WEBHOOK
local Toggle = Tabs.Main:AddToggle("Huge", {Title = "Huge WH", Default = false })

Toggle:OnChanged(function()
    spawn(monitorAndNotifyHugePetIncreases)
end)

Options.Huge:SetValue(false)
